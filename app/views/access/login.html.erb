<% @page_title = "Admin Login" %>
<div class="login">
<%= form_tag(action => 'attempt_login') do %>
<table>
<tr>
<td><% label_tag(:email) %></td>
<td><% text_field_tag(:email) %></td>
</tr>
<tr>
<td><% label_tag(:haslo) %></td>
<td><% text_field_tag(:haslo) %></td>
</tr>
<tr>
<td>&nbsp;</td>
<td><% submit_tag("Zaloguj") %></td>
</tr>
</table>
<% end %>
</div>